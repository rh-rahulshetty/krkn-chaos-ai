scenario:
  pod-scenarios:
    enable: true
  application-outages:
    enable: true
  container-scenarios:
    enable: true
  node-cpu-hog:
    enable: false
  node-memory-hog:
    enable: false
  node-io-hog:
    enable: false
  time-scenarios:
    enable: false
  network-scenarios:
    enable: false
  dns-outage:
    enable: true
  syn-flood:
    enable: false
  pvc-scenarios:
    enable: false
  kubevirt-scenarios:
    enable: false

